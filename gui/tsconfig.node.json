{
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./out",
        "types": [
            "node"
        ]
    },
    "include": [
        "electron.vite.config.*",
        "src/main/**/*",
        "src/preload/**/*"
    ]
}